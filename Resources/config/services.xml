<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="bazinga.jstranslation.translation_finder.class">Bazinga\Bundle\JsTranslationBundle\Finder\TranslationFinder</parameter>
        <parameter key="bazinga.jstranslation.translation_dumper.class">Bazinga\Bundle\JsTranslationBundle\Dumper\TranslationDumper</parameter>
        <parameter key="bazinga.jstranslation.twig.translation_message_format_converter_extension.class">Bazinga\Bundle\JsTranslationBundle\Twig\TranslationMessageFormatConverterExtension</parameter>
        <parameter key="bazinga.jstranslation.translation_to_icu_converter.class">Bazinga\Bundle\JsTranslationBundle\Converter\TranslationToIcuConverter</parameter>
    </parameters>

    <services>
        <service id="bazinga.jstranslation.translation_finder" class="%bazinga.jstranslation.translation_finder.class%">
            <argument type="service" id="kernel" />
        </service>
        <service id="bazinga.jstranslation.translation_dumper" class="%bazinga.jstranslation.translation_dumper.class%">
            <argument type="service" id="templating" />
            <argument type="service" id="bazinga.jstranslation.translation_finder" />
            <argument type="service" id="router" />
            <argument type="service" id="filesystem" />
            <argument></argument> <!-- fallback (locale) -->
            <argument></argument> <!-- default domain    -->
            <argument></argument> <!-- active locales -->
            <argument></argument> <!-- active domains -->
        </service>
        <service id="bazinga.jstranslation.translation_to_icu_converter" class="%bazinga.jstranslation.translation_to_icu_converter.class%" />
        <service id="bazinga.jstranslation.twig.translation_message_format_converter_extension" class="%bazinga.jstranslation.twig.translation_message_format_converter_extension.class%">
            <tag name="twig.extension" />
            <argument type="service" id="bazinga.jstranslation.translation_to_icu_converter" />
        </service>
    </services>
</container>
